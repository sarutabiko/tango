    <a href="/">
        <h1 id="title">単語</h1>
    </a>
    <a href="/search">
        <h1 id="search">
            <i class="fa-solid fa-magnifying-glass"></i>
        </h1>
    </a>
    <% if (currentUser) { %>
        <a href="/user/<%=currentUser.username%>">
            <% } else {%>
                <a onclick="popup('credentials')">
                    <% } %>
                        <div class="dropdown-menu">
                            <h1 id="profile">
