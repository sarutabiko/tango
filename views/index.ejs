<% layout('layouts/boilerplate') %>

    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/app.css">
    <link rel="stylesheet" href="/css/flash.css">
    </head>

    <body>
        <%- partial('partials/navbar') %>
            <%- partial('partials/flash') %>
                <div id="main">
                    <div id="wordlist">
                        <ul>
                            <% if (publicList && publicList.words.length) {%>
                                <a href="/user/<%=publicList.owner.username%>">
                                    <% for (word of publicList.words) {%>
                                        <li>
                                            <% if (word.Kanji.length) {%>
                                                <%=word.Kanji[0] %>
                                                    <% } else {%>
                                                        <%=word.Reading[0] %>
                                                            <% } %>
                                        </li>
                                        <hr>
                                        <% } %>
                                </a>
                                <% } else {%>
                                    <li>No data to display.</li>
                                    <%} %>
                        </ul>
                    </div>
                    <div id="grid">
                    </div>
                </div>